!!!
%html
  %head
    %title Platform
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'share/flashes'
    = render 'share/header'
    .container.application
      .row
        .span7.offset1
          = yield
        .span3.offset1
          .sidebar
            - if user_signed_in?
              = render 'users/card' 
            - else
              = render 'devise/sessions/new'
