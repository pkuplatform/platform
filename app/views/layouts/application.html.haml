!!!
%html
  %head
    %title Platform
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'share/header'
    .container
      .content
        = yield
      .sidebar
        - if user_signed_in?
          = render 'users/card' 
          = render 'share/links'
          = render 'share/search'
          = render "#{secondary_scope}/secondary"
        - else
          = render 'devise/sessions/new'
      .clear
