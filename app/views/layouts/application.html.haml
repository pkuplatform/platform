!!!
%html
  %head
    %title Platform
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'share/flashes'
    = render 'share/header'
    .container.application
      .content
        = yield
      .sidebar
        - if user_signed_in?
          = render 'users/card' 
          = render 'share/recommend_groups'
          = render 'share/hot_groups'
          = render 'share/user_recommend'
        - else
          = render 'devise/sessions/new'
      .clear

