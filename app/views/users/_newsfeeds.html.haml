.newsfeeds.box
  .box-header
    = t "newsfeed"
  .box-body
    - if @newsfeeds.empty?
      - Event.last(50).each do |event|
        - if event_exist?(event)
          = render :partial => "newsfeed", :locals => { :event => event }
    - else
      - @newsfeeds.each do |newsfeed|
        - if event_exist?(newsfeed)
          = render :partial => "newsfeed", :locals => { :event => newsfeed.event }
  .more
