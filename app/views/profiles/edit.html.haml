.title= t '.title'
.box.profile.form
  = form_for @profile, :html => { :multipart => true } do |f|
    - if @profile.errors.any?
      #error_explanation
        %h2
          = pluralize(@profile.errors.count, "error")
          prohibited this profile from being saved:
        %ul
          - @profile.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name, (t '.name')
      = f.text_field :name
    .field
      = f.label :realname, (t '.realname')
      = f.text_field :realname
    .field
      = f.label :gender, (t '.gender')
      = f.select :gender, [[t('.male'), 1], [t('.female'), 2]]
    .field
      = f.label :student_id, (t '.sid')
      = f.text_field :student_id
    .field
      = f.label :phone, (t '.phone')
      = f.text_field :phone
    .field.avatar
      = f.label :avatar, (t '.avatar')
      = f.file_field :avatar
    .field
      = f.text_area :description, :size => "75x5", :placeholder => t(".holder")
    .actions.button-wrapper.long
      = f.submit (t "profile-submit")
