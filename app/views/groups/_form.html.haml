= form_for @group do |f|
  -if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, (t :name)
    = f.text_field :name
  .field
    = f.label :slogan, (t :slogan)
    = f.text_field :slogan
  .field
    = f.label :email, (t :email)
    = f.text_field :email
  .field
    = f.label :logo, (t :logo)
    = f.file_field :logo
  .field
    = f.label :description, (t :description)
    = f.text_area :description
  .field
    = f.label :history, (t :history)
    = f.text_area :history
  .field
    = f.label :organization, (t :organization)
    = f.text_area :organization
  .actions
    = f.submit 'Save'
