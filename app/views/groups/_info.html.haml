.info
  .head
    %span.name= group.name
    %span.category= t group.category.name, :scope => :category
  .admin
    = t :group_admin
    = link_to group.boss.name, group.boss.profile
    = "/"
    = l group.founded_at, :format => :long
    = t '.founded'
  .introduction
    = sanitize(group.introduction, :attributes => %w(id class style href _cke_saved_href title alt width height)) 
  .meta
    = t '.points', :count => group.points
    = "|"
    = link_to (t '.like', :count => group.fans.count), group_circle_path(group,group.fan_circle)
    = "|"
    = link_to (t '.join', :count => group.members.count), group_circle_path(group,group.member_circle)
    = "|"
    = link_to (t '.activities', :count => group.activities.count), group_activities_path(group)
