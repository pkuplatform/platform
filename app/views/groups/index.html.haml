.groups.sort-filter
  .category
    %ul
      %li.first= t '.category'
      - Category.all.each do |category|
        %li
          = link_to category.translated_name, groups_path(:sort => params[:sort], :filter => 'category', :id => category.id)
  .split
  .sort
    %ul
      %li.first= t '.sort'
      %li= link_to (t '.latest'), groups_path(:sort => 'latest', :filter => params[:filter], :id => params[:id])
      %li= link_to (t '.founded'), groups_path(:sort => 'founded', :filter => params[:filter], :id => params[:id])
  .split
  .my
    %ul
      %li.first= t '.my'
      %li= link_to (t '.like'), groups_path(:sort => params[:sort], :filter => 'like')
      %li= link_to (t '.join'), groups_path(:sort => params[:sort], :filter => 'join')
= render :partial => 'card', :collection => @groups, :as => :group
