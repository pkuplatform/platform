.page-header
  %h1= t '.title'
= simple_form_for @group, :html => {:class => 'form-horizontal'} do |f|
  = f.input :category_id, :collection => Category.all, :label_method => :translated_name
  = f.input :name
  = f.input :slogan
  = f.input :email
  = f.input :founded_at, :as => :date, :input_html => {:class => 'span1'}
  = f.input :logo, :as => :file
  = f.button :submit
