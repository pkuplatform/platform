.sort-filter
  .category
    %ul
      %li= link_to (t '.all'), groups_path(:sort => params[:sort], :filter => 'all')
      %li.category
        = t '.category'
        %ul
          - Category.all.each do |category|
            %li
              = link_to category.translated_name, groups_path(:sort => params[:sort], :filter => 'category', :id => category.id)
      %li= link_to (t '.founded'), groups_path(:sort => 'founded', :filter => params[:filter], :id => params[:id])
      %li= link_to (t '.like'), groups_path(:sort => params[:sort], :filter => 'like',:anchor => '')
      %li= link_to (t '.join'), groups_path(:sort => params[:sort], :filter => 'join')
      %li= link_to (t '.wall'), wall_groups_path
