.filter-wrapper
  %ul.nav.nav-pills
    %li#filter-all.active= link_to (t '.all'), groups_path(:sort => params[:sort], :filter => 'all', :anchor=>"filter-all")
    %li#filter-like= link_to (t '.like'), groups_path(:sort => params[:sort], :filter => 'like', :anchor=>"filter-like")
    %li#filter-join= link_to (t '.join'), groups_path(:sort => params[:sort], :filter => 'join', :anchor=>"filter-join")
    %li#to-wall= link_to (t '.wall'), wall_groups_path(:anchor=>'to-wall')
    %li.dropdown#filter-category
      %a{ :class => 'dropdown-toggle', :href => '#', 'data-toggle' => 'dropdown' }
        = t '.category'
        %b.caret
      %ul.dropdown-menu
        - Category.all.each do |category|
          %li
            = link_to category.translated_name, groups_path(:sort => params[:sort], :filter => 'category', :id => category.id, :anchor=>"filter-category")
  .clear
