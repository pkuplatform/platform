.container
  = render 'share/header'
  .content
    .span-7.append-1
      = render 'activities/infobar'
    .box.span-14
      .box-header
        = t :new_blog
        = link_to "#{t :return} "+@activity.title, @activity
      .box-body
        = form_for @blog do |f|
          =f.hidden_field :activity_id,:value=>@activity.id
          %p
            =f.label :title
            =f.text_field :title
          %p
            =f.label :content
            %br/
            =f.text_area :content
          %p
            =f.submit
    .clear
  = render 'share/footer'
