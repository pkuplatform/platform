.span-7.append-1
.box.new-blog
  .box-header
    = t :new_blog
    = secondary_scope
  .box-body
    = form_for @blog do |f|
      =f.hidden_field :activity_id,:value=>@activity.id
      .blog-title
        =f.text_field :title,:placeholder=>(t :title)
      .blog-content
        =f.text_area :content,:placeholder=>(t :content)
      %p
        =f.submit (t :new_blog)
.clear