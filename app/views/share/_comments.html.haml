%ul
  %li.new-comment
    .avatar
      = image_tag current_user.avatar
    .body
      = form_tag  url_for(:action=>"comment"),:remote=>true  do
        = text_area_tag "comment-content"
        = submit_tag t(:new_comment)
    .clear
  = render :partial => 'share/comment', :collection => object.comments.recent
