%ul
  %li.new-comment
    .avatar
      = image_tag current_user.url
    .body
      = form_tag url_for(:action=>"comment"),:remote=>true  do
        .comment-buttons
          = submit_tag t('.submit')
          = submit_tag t(".mention"), :class=>"mention-tag"
        = text_area_tag "comment-content", nil, :placeholder => (t '.holder')
    .clear
  = render :partial => 'share/comment', :collection => object.comments.recent
