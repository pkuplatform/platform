- unless current_user.recommend_groups.empty?
  .recommend.groups
    .title= t '.title'
    %ul
      - current_user.recommend_groups.each do |group|
        %li
          = link_to (image_tag group.logo.url(:thumb)), group
          .meta
            .name= link_to group.name.truncate(20), group
            .points= group.points
