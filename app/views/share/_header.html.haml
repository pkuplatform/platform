-if user_signed_in?
  .header-wrapper
    .header
      .logo
      .panel
        .mailbox
          = link_to (t '.mailbox'), mailboxes_path, { :class => "icon mailbox" }
        .setting
          = link_to (t '.setting'), edit_profile_path(current_user.profile), { :class => "icon setting" }
        .exit
          = link_to (t '.logout'), destroy_user_session_path, { :method => :delete, :class => "icon exit" }
