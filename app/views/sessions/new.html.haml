.sign_box.box
.sign_bg
.sign_form
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.label :email,(t "email")
      = f.email_field :email
    %div
      = f.label :password,(t "password")
      = f.password_field :password
    .options
      %span.lefto
        = f.check_box :remember_me
        = f.label :remember_me,(t "remember_me")
      %span.centero
        |
      %span.righto
        - if devise_mapping.recoverable? && controller_name != 'passwords'
          = link_to t("forget_password"), new_password_path(resource_name)
    .bottons
      %span.lefto
        = link_to image_tag('login.png'), '#',:class=>"submit-btn"
      %span.righto
        = link_to image_tag('signup.png'), new_registration_path(resource_name),:class=>"pop_fancy_box"
    .hidesubmit
      = f.submit
