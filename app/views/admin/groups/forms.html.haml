.box.app-form
  .head
    .back= link_to (t '.back'), @group
    = t '.title'
    .new= link_to (t '.new'), second_building_new_form_group_path
  %table
    %tr
      %td= t '.datetime'
      %td= t '.status'
    - @second_buildings.each do |f|
      %tr
        %td
          = l f.huodongshijian
          = t '.time', :start => f.startclass, :end => f.endclass
        %td= show_status f
