.slink
  %ul
    %li.back= link_to (t '.back'), circles_path
    %li= link_to (t '.message'), message_circle_path(@circle)
.circle
  -if @circle.users.empty?
    =t ".empty"
  -else
    %ul
      - @circle.users.each do |user|
        %li.user
          .avatar= link_to (image_tag user.avatar), user.profile
          .name= link_to user.name.truncate(12), user.profile
      .clear
