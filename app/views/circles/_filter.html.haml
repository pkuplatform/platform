%ul.nav.nav-pills.pull-right
  %li#filter-members.active
    = link_to t(".#{@owner.member_circle.name}"), circle_path(@owner.member_circle, :anchor=>"filter-members")
  %li#filter-admins
    = link_to t(".#{@owner.admin_circle.name}"), circle_path(@owner.admin_circle, :anchor=>"filter-admins")
  %li#filter-applicants
    = link_to t(".#{@owner.applicant_circle.name}"), circle_path(@owner.applicant_circle, :anchor=>"filter-applicants")
  %li#filter-fans
    = link_to t(".#{@owner.fan_circle.name}"), circle_path(@owner.fan_circle, :anchor=>"filter-fans")
  - @normal_circles.each do |c|
    %li{:id=>"filter-#{c.id}"}
      = link_to (t '.fans'), circle_path(@owner.fan_circle, :anchor=>"filter-#{c.id}")
  %li#add-circle
    %a{:href=>"#new-circle", "data-toggle"=>:modal} 
      %i.icon-plus
= render 'new'
