.title= t '.title', :owner => owner.name
.circles
  - @circles.each do |circle|
    -unless circle.users.empty?
      .header
        %span=t "circles."+circle.name
      .circle.box
        %ul
          - circle.users.each do |user|
            %li.user
              .avatar= link_to (image_tag user.avatar), user.profile
              .name= link_to user.name.truncate(12), user.profile
          .clear