%li
  .span-2
    = link_to (image_tag blog.author.avatar), blog.author
  .span-12.last
    .blog-title  
      %h4
        = link_to blog.author.name, blog.author
        = t :posted_new_blog
        = link_to blog.title,blog
      %p
        = l blog.created_at,:format=>:long
        = " / "
        = link_to "#{blog.comments.count} #{t :comment}", blog_path(blog)
    .blog-content
      = truncate blog.content
  .clear