.activity.card.row
  .span2
    .thumbnail
      = link_to (image_tag activity.card), activity
  .span5
    .top
      %span.name= link_to activity.title, activity
    .center
      = sanitize(activity.description, :attributes => %w(id class style href _cke_saved_href title alt width height))
    .bottom
      %span.time
        = l activity.start_at, :format => :short
      %span.location
        = activity.location.truncate(20)
      %span.group
        = t '.from'
        = link_to activity.group.name.truncate(20), activity.group
      %span.meta
        = t '.like', :count => activity.fans.count
        = "|"
        = t '.join', :count => activity.persons.count
        = "|"
        = t '.comment', :count => activity.comments.count
