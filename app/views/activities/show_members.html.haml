= form_tag members_edit_activity_path do 
  %table
    %thead
      %th= "id"
      %th= t "name"
      %th= t "nickname"
      %th= t "student_id"
      %th= t "user_group_status"
      %th= t "user_activity_status"
    %tbody
      - @tenders && @tenders.each do |tender|
        %tr
          %td
          %td= tender.profile.name
          %td= tender.name
          %td= tender.profile.student_id
          %td= is_group_member(@activity, tender)
          %td= select "member", "#{tender.id}", { (t "approving") => Constant::Approving, (t "allow_join") => Constant::Member, (t "reject") => Constant::Rejected }
      -@members && @members.each do |member|
        %tr
          %td
          %td= member.profile.name
          %td= member.name
          %td= member.profile.student_id
          %td= is_group_member(@activity, member)
          %td= select "member", "#{member.id}", { (t "allow_join") => Constant::Member, (t "kick_ass") => Constant::Rejected}
  = submit_tag t 'confirm_change'
