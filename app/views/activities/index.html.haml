.activities.index
  .sort-filter
    .category
      %ul
        %li.first= t '.category'
        - Category.all.each do |category|
          %li
            = link_to category.translated_name, activities_path(:sort => params[:sort], :filter => 'category', :id => category.id)
    .split
    .sort
      %ul
        %li.first= t '.sort'
        %li= link_to (t '.latest'), activities_path(:sort => 'latest', :filter => params[:filter], :id => params[:id])
        %li= link_to (t '.pop'), activities_path(:sort => 'pop', :filter => params[:filter], :id => params[:id])
    .split
    .my
      %ul
        %li.first= t '.my'
        %li= link_to (t '.like'), activities_path(:sort => params[:sort], :filter => 'like')
        %li= link_to (t '.join'), activities_path(:sort => params[:sort], :filter => 'join')
  = render :partial => 'card', :collection => @activities, :as => :activity
