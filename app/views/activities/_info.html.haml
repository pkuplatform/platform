.info
  .title= link_to activity.title, activity
  .admin
    %span= link_to activity.group.name, activity.group
    - if board
      %span= t :host
      %span= link_to activity.admin.profile.name, activity.admin.profile
      %span= t :organize
    - else
      %span= "/"
      %span.time= l activity.start_at
      %span= "/"
      %span.location= activity.location
  - if board 
    .time
      = t "time:", :start_time => (l activity.start_at), :end_time => (l activity.end_at)
    .location
      = t "locations:", :location => activity.location
  .description
    = activity.description
  .blog
    = t :blog_count, :count => activity.blogs.count
    = " "
    = t :picture_count, :count => activity.pictures.count
.clear
