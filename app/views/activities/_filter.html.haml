%ul#sort-filter
  %li#filter-tag
    = form_tag "",:method=>:get do
      = text_field_tag :tags, "", :class => "tags-filter"
      #tags-json.hide= @tags.to_json
  .clear
  %li#filter-all.active= link_to (t '.all'), activities_path(:sort => params[:sort], :filter => 'all', :anchor => 'filter-all')
  %li#filter-category
    = link_to (t '.category'), "javascript:$('#sort-filter .category').slideToggle();"
  %li#filter-like= link_to (t '.like'), activities_path(:sort => params[:sort], :filter => 'like', :anchor => 'filter-like')
  %li#filter-join= link_to (t '.join'), activities_path(:sort => params[:sort], :filter => 'join', :anchor =>'filter-join')
  %li= link_to (t '.wall'), wall_activities_path
  .clear
  %li.category{:class => params[:filter]=='category' ? "" : "need_hide"}
    %ul
      - Category.all.each do |category|
        %li{:id => 'category-'+category.id.to_s}
          = link_to category.translated_name, activities_path(:sort => params[:sort], :filter => 'category', :id => category.id, :anchor => 'category-'+category.id.to_s)
  .clear