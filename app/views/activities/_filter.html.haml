.filter-wrapper
  %ul.nav.nav-pills
    %li.active
      = link_to (t '.all'), activities_path(:sort => params[:sort], :filter => 'all')
    %li
      = link_to (t '.like'), activities_path(:sort => params[:sort], :filter => 'like')
    %li
      = link_to (t '.join'), activities_path(:sort => params[:sort], :filter => 'join')
    %li
      = link_to (t '.wall'), wall_activities_path
    %li.dropdown
      %a{ :class => 'dropdown-toggle', :href => '#', 'data-toggle' => 'dropdown' }
        = t '.category'
        %b.caret
      %ul.dropdown-menu
        - Category.all.each do |category|
          %li
            = link_to category.translated_name, activities_path(:sort => params[:sort], :filter => 'category', :id => category.id)
  .clear
