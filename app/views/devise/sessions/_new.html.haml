.sign-in-form
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .alert= alert
    .email.input-wrapper
      = f.email_field :email, :placeholder => (t :email)
      .sprite
    .password.input-wrapper
      = f.password_field :password, :placeholder => (t :password)
      .sprite
    - if devise_mapping.rememberable?
      .remember.radio-wrapper
        = f.check_box :remember_me, :checked => true
        = f.label :remember_me,(t :remember_me)
    .sign-in.button-wrapper= f.submit (t "sign_in")
    .clear
  .func
    = link_to (t "sign_up"), new_registration_path(resource_name)
    = "|"
    = link_to (t "Forgot your password?"), new_password_path(resource_name)
