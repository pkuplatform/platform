- resource.build_profile
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  %fieldset
    %legend
      = t '.title'
    .control-group
      = f.label :email, (t :email), :class => 'control-label'
      .controls
        = f.email_field :email, :class => 'span4'
        = t '.must'
    .control-group
      = f.label :password, (t :password), :class => 'control-label'
      .controls
        = f.password_field :password, :class => 'span4'
        = t '.must'
    .control-group
      = f.label :password_confirmation, (t :password_confirmation), :class => 'control-label'
      .controls
        = f.password_field :password_confirmation, :class => 'span4'
        = t '.must'
    = f.fields_for :profile do |p|
      .control-group
        = p.label :name, (t '.name'), :class => 'control-label'
        .controls
          = p.text_field :name, :class => 'span4'
      .control-group
        = p.label :realname, (t '.realname'), :class => 'control-label'
        .controls
          = p.text_field :realname, :class => 'span4'
      .control-group
        = p.label :gender, (t '.gender'), :class => 'control-label'
        .controls
          = p.select :gender, [[t('.male'), 1], [t('.female'), 2]], :class => 'span4'
      .control-group
        = p.label :student_id, (t '.sid'), :class => 'control-label'
        .controls
          = p.text_field :student_id, :class => 'span4'
      .control-group
        = p.label :phone, (t '.phone'), :class => 'control-label'
        .controls
          = p.text_field :phone, :class => 'span4'
      .control-group
        = p.label :avatar, (t '.avatar'), :class => 'control-label'
        .controls
          = p.file_field :avatar, :class => 'span4'
      .control-group
        .controls
          = p.text_area :description, :size => "75x5", :placeholder => t(".holder"), :class => 'span4'
    .form-actions
      %button.btn.btn-primary{:type => 'submit'}
        = t ".sign_up"
      %button.btn
        = t '.cancel'
