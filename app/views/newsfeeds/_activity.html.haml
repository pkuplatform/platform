.row.newsfeed{:id => "event-#{event.id}"}
  .span1
    = link_to (image_tag subject.thumb), subject
  .span6
    %p
      %strong
        = link_to subject.name, subject
        = t ".#{event.action}"
    .center.small
      .thumb.row
        .span2.thumbnail
          = image_tag activity.medium
        .span2
          = link_to activity.title, activity
          %br
          = activity.description
      .medium.row
        .span4.thumbnail
          = image_tag activity.medium
    .bottom
      %span.time
        = distance_of_time_in_words_to_now(event.created_at)
        = t 'newsfeeds.before'
      %span.from
        = t 'newsfeeds.from'
        = link_to activity.group.name.truncate(40), activity.group
      %span.meta
        = t '.like', :count => activity.fans.count
        = "|"
        = t '.join', :count => activity.members.count
        = "|"
        = t 'newsfeeds.comments', :count => activity.comments.count
