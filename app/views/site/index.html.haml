.site-index.main
  .hotspot
    .inset-box
      .banner
        %ul
          - @activities.each do |activity|
            %li= image_tag activity.banner.url(:banner)
      .medium
        = image_tag @activities.first.banner.url(:medium) if @activities.first && @activities.first.banner
  = render :partial => 'site/newsfeeds'
  = render :partial => 'site/mouth'
