.user.card
  = link_to (image_tag profile.card), profile
  .info
    .top
      .name= link_to profile.name, profile
    .center
      = profile.description
    .bottom
      %span.meta
        = t '.like', :count => profile.user.users_i_like.count
        = "|"
        = t '.fans', :count => profile.user.users_like_me.count
        = "|"
        = t '.groups', :count => profile.user.groups.count
        = "|"
        = t '.activities', :count => profile.user.activities.count
