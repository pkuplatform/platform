-user = profile.user
.profile.card.row
  .span1
    .avatar
      = link_to (image_tag profile.card), profile.card
  .span6
    .top
      %span.name= (highlight profile.name, @q), profile
    .center
      =sanitize(truncate_html(user.profile.description,:length=>100), :attributes => %w(id class style href _cke_saved_href title alt width height))
    .bottom
      %span.meta
        = link_to (t '.follows', :count => user.follows.count), users_profile_path(user)
        = "|"
        = link_to (t '.fans', :count => user.fans.count), users_profile_path(user)
        = "|"
        = link_to (t '.groups', :count => user.groups.count), profile_path(user)
        = "|"
        = link_to (t '.activities', :count => user.activities.count), profile_path(user)
